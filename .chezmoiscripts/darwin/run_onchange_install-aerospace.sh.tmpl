#!/bin/sh

# -e: exit on error
# -u: exit on unset variables
set -eu

# This script installs Aerospace window manager on macOS using Homebrew

if ! command -v aerospace >/dev/null 2>&1; then
  echo "Installing Aerospace window manager..."
  # Install Aerospace on macOS using Homebrew
  if command -v brew >/dev/null 2>&1; then
    brew install --cask nikitabobko/tap/aerospace
  else
    echo "Homebrew not found. Please install Homebrew first: https://brew.sh/"
    exit 1
  fi
  echo "Aerospace window manager has been installed successfully."
  echo "Remember to grant Accessibility permissions in System Settings > Privacy & Security > Accessibility"
else
  echo "Aerospace is already installed."
fi
