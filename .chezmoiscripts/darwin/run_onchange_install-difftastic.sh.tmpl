#!/bin/sh

# -e: exit on error
# -u: exit on unset variables
set -eu

# This script installs difftastic on macOS using Homebrew

if ! command -v difft >/dev/null 2>&1; then
  echo "Installing difftastic..."
  # Install difftastic on macOS using Homebrew
  if command -v brew >/dev/null 2>&1; then
    brew install difftastic
  else
    echo "Homebrew not found. Please install Homebrew first: https://brew.sh/"
    exit 1
  fi
  echo "difftastic has been installed successfully."
else
  echo "difftastic is already installed."
fi
