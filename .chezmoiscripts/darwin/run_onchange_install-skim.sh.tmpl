#!/bin/sh

# -e: exit on error
# -u: exit on unset variables
set -eu

# This script installs Skim PDF viewer on macOS using Homebrew

# Check if Skim is already installed
if [ -d "/Applications/Skim.app" ] || [ -d "${HOME}/Applications/Skim.app" ]; then
  echo "Skim is already installed."
else
  echo "Installing Skim PDF viewer..."
  # Install Skim on macOS using Homebrew
  if command -v brew >/dev/null 2>&1; then
    brew install --cask skim
  else
    echo "Homebrew not found. Please install Homebrew first: https://brew.sh/"
    exit 1
  fi
  echo "Skim PDF viewer has been installed successfully."
fi
