#!/bin/sh

# -e: exit on error
# -u: exit on unset variables
set -eu

# This script installs eza on macOS using Homebrew

if ! command -v eza >/dev/null 2>&1; then
  echo "Installing eza..."
  # Install eza on macOS using Homebrew
  if command -v brew >/dev/null 2>&1; then
    brew install eza
  else
    echo "Homebrew not found. Please install Homebrew first: https://brew.sh/"
    exit 1
  fi
  echo "eza has been installed successfully."
else
  echo "eza is already installed."
fi
