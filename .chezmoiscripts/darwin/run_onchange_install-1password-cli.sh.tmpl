# Install 1Password CLI on macOS using Homebrew
if ! command -v op >/dev/null 2>&1; then
  echo "Installing 1Password CLI..."
  brew install --cask 1password/tap/1password-cli
else
  # Check if we need to upgrade
  if brew outdated | grep -q 1password-cli; then
    echo "Upgrading 1Password CLI..."
    brew upgrade 1password-cli
  else
    echo "1Password CLI is already installed and up to date."
  fi
fi
