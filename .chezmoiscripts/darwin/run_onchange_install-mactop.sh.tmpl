#!/bin/sh

# -e: exit on error
# -u: exit on unset variables
set -eu

# This script installs mactop (htop for mac) on macOS using Homebrew

if ! command -v mactop >/dev/null 2>&1; then
  echo "Installing mactop..."
  # Install mactop on macOS using Homebrew
  if command -v brew >/dev/null 2>&1; then
    brew install bloznelis/tap/mactop
  else
    echo "Homebrew not found. Please install Homebrew first: https://brew.sh/"
    exit 1
  fi
  echo "mactop has been installed successfully."
else
  echo "mactop is already installed."
fi
