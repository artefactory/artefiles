# direnv - Unclutter your .profile
[".local/bin/direnv"]
  type = "file"
  url = {{ gitHubLatestReleaseAssetURL "direnv/direnv" (printf "direnv.linux-%s" (output "uname" "-m" | trim)) | quote }}
